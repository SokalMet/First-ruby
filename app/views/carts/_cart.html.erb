<h2>Your Cart</h2>
<table>
  <tbody>
    <%= render(cart.line_items) %>
    <tr class="total_line">
      <td>
        <div>
          <span>Total</span>
          <span class="total_cell"><%= number_to_currency(cart.total_price) %></span>
        </div>
      </td>
    </tr>
  </tbody>
</table>

<%= button_to "Checkout", new_order_path, class: 'btn btn-success', method: :get %>
<%= button_to '', @cart, class: 'secrete empty_cart', form_class: 'button_to new-item', method: :delete %>
<span class="btn btn-danger">Empty cart</span>