  <div class="header">
    <nav class="navbar navbar-default navbar-inverse ">
      <div class="container">
        <div class="row">
          <ul class="nav navbar-nav first-nav">
            <% if user_signed_in? %>
              <% if current_user.email === ENV['ADMIN_EMAIL'] %>
                <li><%= link_to 'Products', products_path %></li>
              <% end %>
            <% end %>
            <li><%= link_to 'Store', store_path %></li>
