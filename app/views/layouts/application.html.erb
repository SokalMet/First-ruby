                <li><%= link_to 'Orders', orders_path %></li>
              <% end %>
            <% end %>
          </ul>
          <div class="cabinet">
            <% if user_signed_in? %>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-user" aria-hidden="true"></i> Logout | <%= current_user.email %>
              <% end %>
            <% else %>
